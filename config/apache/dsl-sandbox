<VirtualHost dsl-sandbox:43000>
    ServerName dsl-sandbox
    DocumentRoot /var/www/dsl-sandbox/public

    <Directory /var/www/dsl-sandbox/public>
        AllowOverride none
        RewriteEngine on
        RewriteBase /
        RewriteCond %{REQUEST_FILENAME} !-f
        RewriteRule ^ index.php [QSA,L]
    </Directory>
</VirtualHost>

